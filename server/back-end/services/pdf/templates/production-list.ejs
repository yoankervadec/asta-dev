<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link rel="preconnect" href="https://fonts.googleapis.com" />
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
    <link
      href="https://fonts.googleapis.com/css2?family=Open+Sans:wght@400;600;700&display=swap"
      rel="stylesheet"
    />
    <link rel="stylesheet" href="../styles/reset.css" />
    <link rel="stylesheet" href="../styles/styles2.css" />
    <title>Production List</title>
  </head>
  <body>
    <header>
      <div
        style="
          padding-bottom: 1em;
          margin-bottom: 2em;
          border-bottom: 1px solid var(--color-text);
        "
      >
        <h1 style="margin-bottom: 0.5em">Production List</h1>
        <h4>Printed: Tue Apr 29 2025 17:18:02</h4>
      </div>
    </header>
    <main>
      <% data.forEach(section => {%>
      <section>
        <span style="font-size: var(--fs-lg)">
          <strong><span><%= section.type %></span></strong>
          <span><%= section.requiredDate%></span>
        </span>
        <table style="margin-top: 1em">
          <colgroup>
            <col span="1" style="width: 3.5em" />
            <col span="1" style="width: 6em" />
            <col span="1" style="width: 8em" />
            <col span="1" style="width: 6em" />
          </colgroup>
          <thead>
            <tr>
              <th><span>Line</span></th>
              <th style="text-align: center"><span>Finished</span></th>
              <th><span>Item No.</span></th>
              <th style="text-align: center"><span>Quantity</span></th>
              <th><span>Client</span></th>
            </tr>
          </thead>
          <tbody>
            <% section.items.forEach(line => { %>
            <tr>
              <td style="text-align: center"><span>1</span></td>
              <td style="text-align: center; transform: scale(2)">
                <span style="vertical-align: 0.2em">&#x2610;</span>
              </td>
              <td><span><%= line.item.itemNo %></span></td>
              <td style="text-align: center">
                <span><%= line.quantityRequired %></span>
              </td>
              <td><span><%= line.orderNo %></span></td>
            </tr>
            <% })%>
          </tbody>
        </table>
      </section>
      <% }) %>
    </main>
    <footer>
      <div
        style="
          border: 1px solid;
          height: 10em;
          padding: 0.5em;
          font-style: italic;
          color: #999;
        "
      >
        Comments:
      </div>
      <article style="text-align: center; margin-top: 1em">
        <p>&copy; Scierie Le Tourneur 2025</p>
      </article>
    </footer>
  </body>
</html>
